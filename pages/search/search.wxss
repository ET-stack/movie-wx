@import "../movie/movie.wxss";
.search{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 20px;
  font-size: 14px;
}
.search button{
  height: 55rpx;
  line-height:60rpx;
  border-left: 0px;
  margin-left: 10rpx;
  background-color: #DD5E0E;
  color: white;
  text-shadow: black 0 1px 0;
}
.input{
  width: 60%;
  border: 1px solid #ccc;
  box-shadow: inset 0 0 10px #ccc;
  color: black;
  background-color: white;
}
.inputShow{
    padding-left: 20px;
    color: white;
    text-align: center;
    font-size: 12px;
}
.btnClick{
    background-color: orangered;
}